{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "quasar.config.cjs",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist/spa"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server.js" },
      { "src": "/(.*)", "dest": "/dist/spa/index.html" }
    ]
  }